{% set routeName = app.request.attributes.get('_route') %}

<header>
    <nav class="menu-header">
        <div class="item-logo">
            {{ include('components/_logo.html.twig') }}
        </div>
        <div class="item-bars" id="showMenu">
            <i class="bars icon"></i>
        </div>
        <ul class="menu" id="headerMenu">
            <li class="menu-item">
                <a class="item{% if routeName == 'app_home' %} active{% endif %}" href="{{ path('app_home') }}">Accueil</a>
            </li>
            <li class="menu-item">
                <div class="ui simple dropdown item">
                    Categories
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        {% for category in getCategories() %}
                            <a class="item" href="#">{{ category.name }}</a>
                        {% endfor %}
                    </div>
                </div>
            </li>
        </ul>
    </nav>
</header>

