<form method="post" action="{{ path('patch_note_delete', {
    id: patchNote.id,
    slug: patchNote.resource.slug
}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patchNote.id) }}">
    <button class="ui button">Supprimer</button>
</form>
